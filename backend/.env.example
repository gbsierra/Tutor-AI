# =================================================================
# Choose your LLM provider: "openai", "gemini", or "anthropic"
# =================================================================
LLM_PROVIDER=gemini

# =================================================================
# GEMINI API CONFIGURATION (Required when using Gemini)
# =================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_JSON_MODEL=gemini-1.5-flash

# =================================================================
# OPENAI API CONFIGURATION (Required when using OpenAI)
# =================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_JSON_MODEL=gpt-4o-mini

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/class_tutor

# =================================================================
# SERVER CONFIGURATION
# =================================================================
PORT=3000
NODE_ENV=development

# =================================================================
# FRONTEND CONFIGURATION (for CORS)
# =================================================================
FRONTEND_URL=http://localhost:5173

# =================================================================
# GOOGLE OAUTH CONFIGURATION
# =================================================================
GOOGLE_CLIENT_ID=123456789-abcdefg.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-abcdefghijklmnop
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

YOUTUBE_API_KEY=youtube-api-key