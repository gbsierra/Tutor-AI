{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "zod": ["./node_modules/zod"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}